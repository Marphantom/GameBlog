@model GameBlog.Models.Post.DetailPost
@{
    ViewData["Title"] = "BlogPage";
    Layout = "~/Views/Shared/_BlogPageLayout.cshtml";
}

<div id="wrapper" class="wrapper">
    <!-- Add your site or application content here -->
    <!-- Header Area Start Here -->
    <header class="has-mobile-menu">
        <div id="rt-sticky-placeholder"></div>
        <div id="header-menu" class="header-menu menu-layout2 bg--dark">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <nav id="dropdown" class="template-main-menu">
                            <ul>
                                <li class="hide-on-mobile-menu">
                                    <a asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                                <li class="hide-on-desktop-menu">
                                    <a href="#">HOME</a>
                                    <ul class="dropdown-menu-col-2">
                                        <li><a href="index.html">Home 1</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#">CATEGORIES</a>
                                    <ul class="dropdown-menu-col-1">
                                        <li>
                                            <a asp-controller="Category" asp-action="Index">Category Management</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#">BLOG</a>
                                    <ul class="dropdown-menu-col-1">
                                        <li>
                                            <a asp-controller="Posts" asp-action="ViewAllPost">All Post</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="pt--29 pb--29 bg--light">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <div class="col-lg-4">
                        <div class="header-action-items">
                            <ul>
                                <li class="item-social-layout2"> <a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                <li class="item-social-layout2"> <a href="#"><i class="fab fa-twitter"></i></a></li>
                                <li class="item-social-layout2"> <a href="#"><i class="fab fa-instagram"></i></a></li>
                                <li class="item-social-layout2"> <a href="#"><i class="fab fa-youtube"></i></a></li>
                                <li class="item-social-layout2"> <a href="#"><i class="fas fa-rss"></i></a></li>
                                <li class="item-social-layout2"> <a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                <li class="item-social-layout2"> <a href="#"><i class="fab fa-google-plus-g"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4 d-flex justify-content-center">
                        <div class="logo-area">
                            <a asp-controller="Home" asp-action="Index" class="temp-logo" id="temp-logo">
                                <h1 style="color:black">GameBlog</h1>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 d-flex justify-content-end">
                        <div class="header-action-items">
                            <ul>
                                <li class="header-search-box divider-style-border">
                                    <a href="#header-search" title="Search">
                                        <i class="flaticon-magnifying-glass"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Header Area End Here -->
    <!-- Single Blog Banner Start Here -->
    <section class="single-blog-wrap-layout2">
        <div class="container">
            <div class="single-blog-box-layout2">
                <div class="blog-banner">
                    <img src="@Model.Pictures" alt="blog">
                </div>
                <div class="single-blog-content">
                    <div class="blog-entry-content">
                        <ul class="entry-meta meta-color-dark">

                            <li><i class="fas fa-calendar-alt"></i>@Model.DateSubmitted</li>

                        </ul>
                        <h2 class="item-title">@Model.PostName</h2>
                        <ul class="item-social">
                            <li><a href="#" class="facebook"><i class="fab fa-facebook-f"></i>SHARE</a></li>
                            <li><a href="#" class="twitter"><i class="fab fa-twitter"></i>SHARE</a></li>
                            <li><a href="#" class="g-plus"><i class="fab fa-google-plus-g"></i>SHARE</a></li>
                            <li><a href="#" class="pinterst"><i class="fab fa-pinterest"></i>PIN IT</a></li>
                            <li><a href="#" class="load-more"><i class="fas fa-plus"></i>MORE</a></li>
                        </ul>
                    </div>
                    <div class="blog-details">
                        @Html.Raw(Model.PostContent)
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </section>
    <!-- Single Blog Banner End Here -->
    <!-- Footer Area Start Here -->
    <footer class="footer-wrap-layout2">
        <div class="container">
            <div class="footer-box-layout2">
                <div class="footer-logo">
                    <a asp-controller="Home" asp-action="Index" class="btn-group-sm"><h1 style="color:white">GameBlog</h1></a>
                </div>
                <ul class="footer-social">
                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                    <li><a href="#"><i class="fab fa-youtube"></i></a></li>
                </ul>
                <div class="copyright">© 2021. Trương Văn Trọng Nguyên C0621H2</div>
            </div>
        </div>
    </footer>
    <!-- Footer Area End Here -->
    <!-- Search Box Start Here -->
    <div id="header-search" class="header-search">
        <button type="button" class="close">×</button>
        <form class="header-search-form">
            <input type="search" value="" placeholder="Type here........">
            <button type="submit" class="search-btn">
                <i class="flaticon-search"></i>
            </button>
        </form>
    </div>
    <!-- Search Box End Here -->
</div>


