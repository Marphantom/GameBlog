@model GameBlog.Models.Post.DetailPost
 
@{
    ViewData["Title"] = "Detail";
    var category = ViewBag.Category as GameBlog.Entities.Category;
}

<h1>Detail</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostName)
        </dt>
        <dd class = "col-sm-10">
            <h2>@Html.DisplayFor(model => model.PostName)</h2>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.PostContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pictures)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content(Model.Pictures)" class="product_img-lg" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateSubmitted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateSubmitted)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success text-white" asp-controller="Posts" asp-action="Edit" asp-route-PostId="@Model.PostId">
        Edit
    </a>
    <a class="btn btn-danger text-white" asp-controller="Posts" asp-action="Remove" asp-route-PostId="@Model.PostId">
        <i class="fa fa-trash"> Remove</i>
    </a>
    <a class="btn btn-outline-secondary" asp-controller="Posts" asp-action="Index" asp-route-catId="@category.CategoryId">
        <i class="fa fa-backward"> Back to List</i>
    </a>
</div>
