@using GameBlog.Models.Account
@model Login
@{
    ViewData["Title"] = "Login";
}
<div class="wrapper fadeInDown">
    <div id="formContent">
        <div class="container">

            <div class="row justify-content-center" style="margin-top:20px">
                <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    <form role="form" method="post" asp-controller="Account" asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <fieldset>
                            <div class="text-sm-center">
                                <h2>Please Sign In</h2>
                            </div>

                            <hr class="colorgraph">
                            <div class="form-group">
                                <input asp-for="Email" class="form-control input-lg" placeholder="Email Address">
                                <input type="hidden" asp-for="ReturnUrl" value="@ViewBag.ReturnUrl" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control input-lg" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6 offset-md-4">
                                    <div class="checkbox">
                                        <label>
                                            <input asp-for="RememberMe"> Remember Me
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <hr class="colorgraph">
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <input type="submit" class="btn btn-lg btn-success btn-block" value="Sign In">
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <a asp-controller="Account" asp-action="Register" class="btn btn-lg btn-primary btn-block">Register</a>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}